#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        jdk 'ZULU17'
        maven 'maven-3.9.12'
    }
    stages {
        stage('Check config') {
            steps {
                sh 'echo "JAVA_HOME: $JAVA_HOME"'
                sh 'which java || true'
                sh 'java -version || true'

                sh 'echo "MAVEN_HOME: $MAVEN_HOME"'
                sh 'echo "MAVEN2_HOME: $MAVEN2_HOME"'
                sh 'which mvn || true'
                sh 'mvn -version || true'
            }
        }

        stage('Build and Test') {
            steps {
                withMaven() {
                    sh 'mvn -B clean install'
                }
            }
        }
    }
}