#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        jdk 'ZULU17'
        maven 'maven-3.9.12'
    }
    stages {
        stage('Check config') {
            sh 'which mvn'
            sh 'mvn -version'
            sh 'which java'
            sh 'java -version'
        }

        stage('Build and Test') {
            steps {
                withMaven(maven: 'maven-3.9.12') {
                    sh 'mvn -B clean install'
                }
            }
        }
    }
}