#macro (assetAssessmentSummary $id $assets, $useModifiedSeverity, $enableSingleAssetGroups)
    #set ($assetGroups = $assessmentReportAdapter.groupAssetsByAssetGroup($assets, $useModifiedSeverity, $enableSingleAssetGroups))
    #foreach ($group in $assetGroups)
        #assetAssessmentSummaryTable($id $group)
    #end
#end
##
#macro (assetAssessmentSummaryTable $id $group)
#set ($groupedAssetVulnerabilityCounts = $group.groupedAssetVulnerabilityCounts)
#set ($totalVulnerabilityCounts = $group.totalVulnerabilityCounts)
#set ($assetGroupDisplayName = $group.assetGroupDisplayName)
#set ($assetGroupAsXmlId = $group.assetGroupAsXmlId)
<table id="${id}-${assetGroupAsXmlId}">
    <title>$utils.getText("general.short.asset-group") <i>$assetGroupDisplayName</i></title>
    <tgroup cols="8">
        <colspec colname="COLSPEC0" colnum="1" colwidth="27*" align="left"/>
        <colspec colname="COLSPEC1" colnum="2" colwidth="11*" align="center"/>
        <colspec colname="COLSPEC2" colnum="3" colwidth="11*" align="center"/>
        <colspec colname="COLSPEC3" colnum="4" colwidth="11*" align="center"/>
        <colspec colname="COLSPEC4" colnum="5" colwidth="11*" align="center"/>
        <colspec colname="COLSPEC5" colnum="6" colwidth="11*" align="center"/>
        <colspec colname="COLSPEC6" colnum="7" colwidth="9*" align="center"/>
        <colspec colname="COLSPEC7" colnum="8" colwidth="9*" align="right"/>
        <thead>
            <row valign="middle">
                <entry colname="COLSPEC0">$utils.getText("general.short.asset-name")</entry>
                <entry colname="COLSPEC1">#labelRef("Critical")</entry>
                <entry colname="COLSPEC2">#labelRef("High")</entry>
                <entry colname="COLSPEC3">#labelRef("Medium")</entry>
                <entry colname="COLSPEC4">#labelRef("Low")</entry>
                <entry colname="COLSPEC5">#labelRef("None")</entry>
                <entry colname="COLSPEC6"><p>$utils.getText("general.short.total")</p></entry>
                <entry colname="COLSPEC7"><p>$utils.getText("general.short.assessed")</p></entry>
            </row>
        </thead>

        <tbody>
        #foreach ($groupedAssetCounts in $groupedAssetVulnerabilityCounts)
            #set ($counts = $groupedAssetCounts.totalCounts)
            #set ($assetDisplayName = $groupedAssetCounts.assetDisplayName)
            #set ($assetVersion = $groupedAssetCounts.assetVersion)
            #set ($assetPath = $groupedAssetCounts.assetPath)
            <row valign="middle">
                <entry><lines>#if ($vulnerabilityAdapter.notNull($assetPath))<i>$assetPath</i>
#end$assetDisplayName#if ($assetVersion)

$assetVersion#end</lines></entry>
                <entry>$counts.criticalCounter</entry>
                <entry>$counts.highCounter</entry>
                <entry>$counts.mediumCounter</entry>
                <entry>$counts.lowCounter</entry>
                <entry>$counts.noneCounter</entry>
                <entry>$counts.totalCounter</entry>
                <entry>$utils.percent($counts.assessedCounter, $counts.totalCounter)</entry>
            </row>
        #end
        <row valign="middle">
            <entry><p>Total</p></entry>
            <entry>$totalVulnerabilityCounts.criticalCounter</entry>
            <entry>$totalVulnerabilityCounts.highCounter</entry>
            <entry>$totalVulnerabilityCounts.mediumCounter</entry>
            <entry>$totalVulnerabilityCounts.lowCounter</entry>
            <entry>$totalVulnerabilityCounts.noneCounter</entry>
            <entry>$totalVulnerabilityCounts.totalCounter</entry>
            <entry>$utils.percent($totalVulnerabilityCounts.assessedCounter, $totalVulnerabilityCounts.totalCounter)</entry>
        </row>
        </tbody>
    </tgroup>
</table>
#end